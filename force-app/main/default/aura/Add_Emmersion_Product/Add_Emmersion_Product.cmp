    <div>
        <aura:iteration items="{!v.emmersionProductList}" var="item" indexVar="index">
            <lightning:layout multipleRows="true">
                <lightning:layoutItem size="3" padding="around-small">
                    <div class="custom-box">
                        <c:customLookup selectedRecord="{!item.selectedRecord}" objectName="product2" fieldName="Name" label="Product Name" iconName="standard:account" placeholder="Enter Value" />
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="3" padding="around-small">
                    <div class="custom-box">
                        <lightning:input type="number" name="input1" label="Enter Quantity" value="{!item.Quantity}"/>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2" padding="around-small">
                    <div class="custom-box">
                        <lightning:select name="select1" label="Billing Term" value="{!item.BillingTerm}">
                            <option value="Monthly">Monthly</option>
                            <option value="Annually">Annually</option>
                        </lightning:select>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem size="2" padding="around-small">
                    <div class="custom-box">
                        <lightning:input type="number" disabled="true" name="input2" label="Price" value="{!item.Price}"/>
                    </div>
                </lightning:layoutItem>
                
            </lightning:layout>
        </aura:iteration>
    </div>
    
